            <Font name="Dubai Regular" size="14.0" />
         </font>
      </Button>
      <Button layoutX="425.0" layoutY="400.0" mnemonicParsing="false" onAction="#onSignupButtonClick" prefHeight="41.0" prefWidth="94.0" text="Signup" textAlignment="CENTER">
